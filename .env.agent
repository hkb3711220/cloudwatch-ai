# CloudWatch Log Agent - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ===== AWS Configuration =====
# AWS Region (required)
AWS_DEFAULT_REGION=ap-northeast-1
# Alternative: AWS_REGION=ap-northeast-1

# AWS Credentials (choose one method)
# Method 1: AWS Profile (recommended)
AWS_PROFILE=default

# Method 2: Direct credentials (for CI/CD)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# ===== AI Model Configuration =====
# Choose one AI provider API key

# OpenAI (recommended)
# OPENAI_API_KEY=sk-your-openai-key-here
# OPENAI_MODEL=gpt-4o-mini

# Alternative AI providers
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
# GOOGLE_API_KEY=your-google-key-here
# AZURE_OPENAI_API_KEY=your-azure-key-here
# AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com/

# ===== Logging Configuration =====
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log format (optional)
# LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ===== Application Settings =====
# Default investigation parameters
DEFAULT_LOG_LIMIT=1000
MAX_LOG_EVENTS=10000
DEFAULT_TIME_RANGE_HOURS=24
SEARCH_TIMEOUT_SECONDS=300 